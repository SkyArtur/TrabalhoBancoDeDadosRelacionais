doctype html
html(lang='pt-br')
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet' href='css/style.min.css')
        link(rel="apple-touch-icon" sizes="180x180" href="icons/apple-touch-icon.png")
        link(rel="icon" type="image/png" sizes="32x32" href="icons/favicon-32x32.png")
        link(rel="icon" type="image/png" sizes="16x16" href="icons/favicon-16x16.png")
        link(rel="manifest" href="icons/site.webmanifest")
        script(src='js/jquery-3.7.1.min.js')
        title #{title}

    body()
        div(class='container-fluid bg-body-tertiary vh-100')
            main(id='app-main' class='container p-0 bg-body vh-100')
                include includes/_header
                include includes/_menu
                div(id='app-content')
                    div(class='border-bottom my-1')
                        block content
                    div(class='border-top container my-1')
                        block bottom
                include includes/_footer
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")
        script(type='module' src='js/main.min.js')