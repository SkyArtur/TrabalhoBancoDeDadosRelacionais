extends ../home


block exerc
    include:markdown-it(linkify langPrefix='highlight-') ../includes/_exerc05.md
    hr
    div(class='(container')
        table(class='table table-dark')
            thead
                tr
                    th Editora
                    th Média de Preços
            tbody
                if exercicios
                    each exerc in exercicios
                        tr
                            td #{exerc.nome}
                            td #{exerc.media}
                else
                    h4 ERROR :: 500 :: Sem conexão com o servidor