extends ../home


block exerc
    include:markdown-it(linkify langPrefix='highlight-') ../includes/_exerc04.md
    hr
    div(class='(container')
        table(class='table table-dark')
            thead
                tr
                    th Editora
                    th Título
            tbody
                if exercicios
                    each exerc in exercicios
                        tr
                            td #{exerc.editora}
                            td #{exerc.titulo}
                else
                    h4 ERROR :: 500 :: Sem conexão com o servidor