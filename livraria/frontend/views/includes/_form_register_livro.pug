form(method='post' action='' id='form-register_livro')
    div(class='row mb-1')
        div(class='col-7')
            label(for='titulo' class='form-label') Título:
            input(class='form-control form-control-sm' id='titulo' name='titulo')
        div(class='col-5')
            label(for='autor' class='form-label') Autor:
            input(class='form-control form-control-sm' id='autor' name='autor')
    dic(class='row mb-1')
        div(class='col-6')
            label(for='isbn' class='form-label') ISBN:
            input(class='form-control form-control-sm' id='isbn' name='isbn')
        div(class='col-2')
            label(for='ano' class='form-label') Ano:
            input(class='form-control form-control-sm' id='ano' name='ano')
        div(class='col-2')
            label(for='quantidade' class='form-label') Quantidade:
            input(class='form-control form-control-sm' id='quantidade' name='quantidade')
        div(class='col-2')
            label(for='preco' class='form-label') Preço:
            input(class='form-control form-control-sm' id='preco' name='preco')
    dic(class='row ')
        div(class='col-8')
            label(for='editora_id' class='form-label') Editora:
            select(class='form-select' id='editora_id' name='editora_id')
                option(selected) Selecione uma editora...
                each editora in editoras
                    option(value=`${editora.id}`) #{editora.nome}
        div(class='col-4 d-flex flex-wrap gap-1 justify-content-start align-items-end')
            input(type='reset' id='app-form-clear' class='btn btn-sm btn-danger me-2 px-4' value='Limpar')
            input(type='submit' class='btn btn-sm btn-primary px-4')